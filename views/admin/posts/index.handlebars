<h1>All Question</h1>


<table class="table table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Question</th>
            <th>Answer</th>
        </tr>

    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td>{{question}}</td>
            <td>{{answer}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a> </td>
            <td><form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form></td>
        </tr>
        {{/each}}
    </tbody>

</table>
