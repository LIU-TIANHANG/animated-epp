<main role="main" class="container">
    <div id="quiz-container" class="container">
        <!-- Quiz Results -->
        <div id="quiz-result" style="border: none;" class="card mx-3 text-white">
            <div class="card-header m-3 bg-primary text-white">
                You Scored <span id="quiz-percent"></span>% - <span id="quiz-score"></span>/<span id="quiz-max-score"></span><br/>
            </div>
        </div>

        <!-- Quiz Container -->
        <div id="quiz" class="container pb-5">
            <!-- Question 1 -->
            <div class="card m-3">
                <div class="card-header">
                    1. Which factors will contribute to the end of humanity as we know it?
                </div>
                <div class="card-body ml-3">
                    <div class="radio">
                        <label><input type="radio" name="q1" value="a"> Global warming</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="q1" value="b"> The release of Linux 4.1.15</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="q1" value="c"> Cats</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="q1" value="d"> Advancements in artificial intelligence</label>
                    </div>
                </div>
            </div>

            <!-- Question 2 -->
            <div class="card m-3">
                <div class="card-header">
                    2. Which factors will contribute to the end of humanity as we know it?
                </div>
                <div class="card-body ml-3">
                    <div class="radio">
                        <label><input type="radio" name="q2" value="a"> Global warming</label>
                    </div>
                    <div class="radio">
