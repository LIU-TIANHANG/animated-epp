<h1> Edit Question</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="question"> Question</label>
        <input name="question" type="text" class="form-control" id="question" placeHolder="Enter Question" >
    </div>
    <div class="form-group">
        <label for="answer"> Answer</label>
        <input name="answer" type="text" class="form-control" id="title" placeHolder="Enter Answer" >
    </div>




    <button type="submit" class="btn btn-primary">Update Question</button>
</form>