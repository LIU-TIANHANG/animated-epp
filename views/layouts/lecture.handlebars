<!-- Dynamic Display JS code -->
<script type="text/javascript">
    // displayLecture();
    window.onload = function() {

        document.getElementById('lecture-btn').onclick = function() {
            displayLecture();
        };

        document.getElementById('playground-btn').onclick = function() {
            displayCircuit();
        };

        document.querySelector('#next-btn-test').onclick = testNextPg;
        document.querySelector('#prev-btn-test').onclick = testPrevPg;
    };

    function displayLecture() {
        document.querySelector('#slide_circuit').style.display = 'none';
        document.querySelector('#slide_lecture').style.display = 'block';
    }

    function displayCircuit() {
        document.querySelector('#slide_lecture').style.display = 'none';
        document.querySelector('#slide_circuit').style.display = 'block';
    }

    // TODO: Should be changed to nextPg(currentPg)
    // TODO: if current is alr 1st pg disable prev button
    // TODO: bind keyboard
    function testNextPg() {
        document.querySelector('#lecture_pg1').style.display = 'none';
        document.querySelector('#lecture_pg2').style.display = 'block';
    }
    function testPrevPg() {
        document.querySelector('#lecture_pg2').style.display = 'none';
        document.querySelector('#lecture_pg1').style.display = 'block';
    }

</script>
