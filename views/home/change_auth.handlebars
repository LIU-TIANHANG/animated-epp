<div class="card card-login mx-auto mt-5">
    <div class="card-header">Login</div>

    <div class="card-body">
        <form action="/change_auth" method="post">

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input name="email" class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="authentication">Authentication</label>
                <select name="authentication" id="authentication" class="form-control">
                    <option value="student">Student</option>
                    <option value="lecturer">Lecturer</option>
                </select>
            </div>


            <button type="submit" class="btn btn-primary btn-block">Change authentication</button>
        </form>
        <div class="text-center">
            <a class="d-block small mt-3" href="/register">Register an Account</a>
            <a class="d-block small" href="/change_password">Forgot Password?</a>
            <a class="d-block small" href="/">Home Page?</a>
        </div>
    </div>
</div>